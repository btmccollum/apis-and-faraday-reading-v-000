<h1>Search for Places Near Me</h1>
<%= form_tag '/search' do %>
  <%= label_tag :searchterm %>
  <%= text_field_tag :searchterm %><br>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= submit_tag "Search!" %>
<% end %>

<div>
  <% if @error %> 
    <p><%= @error %></p>
  <% elsif @venues %>
  <ul>
  <% @venues.each do |venue| %>
    <li>
      <%= venue["name"] %><br>
      <%= venue["location"]["address"] %><br>
      Checkins: <%= venue["stats"]["checkinsCount"] %><br>
      Tips: <%= venue["stats"]["tipCount"] %>
    </li>
    <% end %>
  </ul>
  <% end %>
</div>